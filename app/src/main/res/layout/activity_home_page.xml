<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ankit.traveltalk.HomePageActivity"
    android:background="@drawable/tree"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="131dp"
        android:layout_height="136dp"

        android:layout_marginTop="16dp"
        android:background="@drawable/ic_directions_bike_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="127dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:text="TRAVELTALK"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/blog_btn"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="@drawable/background_login"
        android:text="Blog"
        android:textSize="17dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btn_places"
        app:layout_constraintRight_toRightOf="@+id/btn_places"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="81dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_places" />

    <Button
        android:id="@+id/btn_nearby"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginEnd="40dp"
        android:textSize="17dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/background_login"
        android:text="NearBy"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="286dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/btn_places"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginEnd="37dp"
        android:textSize="17dp"
        android:layout_marginStart="37dp"
        android:background="@drawable/background_login"
        android:text="About THE Places"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="352dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_contactus"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:textSize="17dp"

        android:background="@drawable/background_login"
        android:text="@string/explore"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btn_places"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_places"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btn_places" />


</android.support.constraint.ConstraintLayout>
